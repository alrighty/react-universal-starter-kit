{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "semi": [2, "never"],
    "indent": ["error", 2, { "SwitchCase": 0 }],
    "comma-dangle": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "quote-props": [2, "consistent"],
    "no-else-return": 0,
    "no-shadow": 0,
    "react/prefer-stateless-function": 0
  },
  "plugins": [
    "import",
    "babel",
    "react"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/config.node.js"
      }
    }
  }
}
